{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <table cellpadding="0" cellspacing="0" style="width: 100%">
        <tr>
            <td align="left" valign="middle" class="menu_title menu_title">
                {{ catalogueItem.catalogueTitle }}
            </td>
        </tr>
    </table>
    <div class="page">
        {{ catalogueItem.catalogueDescription | raw }}
        <div class="indent"></div>

{% for categoryItem in catalogueItem.categories %}
        <div class="catalogue">
            <div class="title">
                <a href="{{ path('categoryItem', {catalogueName: catalogueItem.catalogueName, categoryName: categoryItem.categoryName}) }}">{{ categoryItem.categoryTitle }}</a>
            </div>
            <div class="image">
                <a href="{{ path('categoryItem', {catalogueName: catalogueItem.catalogueName, categoryName: categoryItem.categoryName}) }}">
                    <img src="{{ categoryItem.categoryPicture }}" class="product" alt="{{ categoryItem.categoryTitle }}" title="{{ categoryItem.categoryTitle }}"/>
                </a>
            </div>
        </div>
{% endfor %}
    </div>
{% endblock %}
